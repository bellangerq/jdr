---
layout: 'layouts/base.njk'
---

{% include 'layouts/home-header.njk' %}

<main>
  <ul class="articles">
    {% for article in collections.articles %}
      <li>
        <article class="article">
          <h2 class="article-title">
            <a href="{{ article.url }}">{{ article.data.title }}</a>
          </h2>
          <span class="article-date">Article publi√© le <time datetime="{{ article.data.publishedAt }}">{{ article.data.publishedAt | date }}</time></span>
          {% image article.data.featuredImage, article.data.alt, 'article-image' %}
        </article>
      </li>
    {% endfor %}
  </ul>
</main>